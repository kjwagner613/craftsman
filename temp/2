import { motion } from 'framer-motion';
import '../../index.css';

const scrollToTop = () => {
  window.scrollTo({ top: 0, behavior: "smooth" });
};



const Contact = ({ selected }) => {
  const [isVisible, setIsVisible] = useState(false);
  const [showColumns, setShowColumns] = useState(false);
  

  useEffect(() => {
    let timer;
